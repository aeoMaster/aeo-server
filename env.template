# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=5000
# Note: This application requires Node.js 20 or higher

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/your-database-name
MONGODB_URI_TEST=mongodb://localhost:27017/test-database

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-jwt-secret-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/oauth/google/callback

# =============================================================================
# LINKEDIN OAUTH CONFIGURATION
# =============================================================================
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:5000/api/oauth/linkedin/callback

# =============================================================================
# FRONTEND URLS
# =============================================================================
CLIENT_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# =============================================================================
# SENDGRID EMAIL CONFIGURATION
# =============================================================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_TEMPLATE_IDS={"welcome":"d-template-id","invite":"d-template-id","reset":"d-template-id"}
USE_MOCK_EMAIL=true

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
PAGESPEED_API_KEY=your-pagespeed-api-key

# =============================================================================
# AWS CONFIGURATION (Virginia Region - us-east-1)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# =============================================================================
# ELASTIC BEANSTALK CONFIGURATION
# =============================================================================
EB_APPLICATION_NAME=your-eb-application-name
EB_ENVIRONMENT_NAME=your-eb-environment-name
EB_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and set these for production deployment
# NODE_ENV=production
# PORT=8080
# CLIENT_URL=https://your-frontend-domain.com
# FRONTEND_URL=https://your-frontend-domain.com
# USE_MOCK_EMAIL=false 